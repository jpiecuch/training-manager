<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="authenticationValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.authentication.AuthenticationValidator"/>

    <bean id="registrationValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.registration.RegistrationValidator">
        <property name="emailPattern" value="${user.email.pattern}"/>
        <property name="maxNameLength" value="${user.name.maxLength}"/>
        <property name="minNameLength" value="${user.name.minLength}"/>
        <property name="namePattern" value="${user.name.pattern}"/>
        <property name="maxPasswordLength" value="${user.password.maxLength}"/>
        <property name="minPasswordLength" value="${user.password.minLength}"/>
        <property name="passwordPattern" value="${user.password.pattern}"/>
        <property name="repository" ref="accountRepository"/>
    </bean>

    <bean id="descriptionValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.description.DescriptionValidator">
        <property name="minNameLength" value="${description.name.minLength}"/>
        <property name="maxNameLength" value="${description.name.maxLength}"/>
    </bean>

    <bean id="planValidator" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.PlanValidator"/>

    <bean id="equipmentValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.equipment.EquipmentValidator">
        <property name="validators">
            <map>
                <entry key="BAR" value-ref="barValidator"/>
                <entry key="BENCH" value-ref="benchValidator"/>
                <entry key="DUMBBELL" value-ref="dumbbellValidator"/>
                <entry key="LOAD" value-ref="loadValidator"/>
                <entry key="NECK" value-ref="neckValidator"/>
                <entry key="PRESS" value-ref="pressValidator"/>
                <entry key="STAND" value-ref="standValidator"/>
            </map>
        </property>
    </bean>

    <bean id="roleValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.role.RoleValidator">
        <property name="readRepository" ref="roleRepository"/>
    </bean>

    <bean id="barValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.equipment.bar.BarValidator"/>

    <bean id="benchValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.equipment.bench.BenchValidator"/>

    <bean id="neckValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.equipment.neck.NeckValidator"/>

    <bean id="loadValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.equipment.load.LoadValidator"/>

    <bean id="dumbbellValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.equipment.dumbbell.DumbbellValidator"/>

    <bean id="pressValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.equipment.press.PressValidator"/>

    <bean id="standValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.equipment.stand.StandValidator"/>

    <bean id="executionValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.execution.ExecutionValidator"/>

    <bean id="userWorkoutValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.userworkout.UserWorkoutValidator"/>

    <bean id="accountRecordValidator" class="pl.jakubpiecuch.trainingmanager.web.validator.accountrecord.AccountRecordValidator"/>
</beans>
