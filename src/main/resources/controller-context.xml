<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="abstractController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.AbstractController" abstract="true">
        <property name="versionServices">
            <map>
                <entry key="v1" value-ref="version1Service"/>
            </map>
        </property>
    </bean>

    <bean id="signInController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.signin.SignInController" parent="abstractController"/>

    <bean id="signOutController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.signout.SignOutController" parent="abstractController"/>

    <bean id="signOnController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.signon.SignOnController" parent="abstractController"/>

    <bean id="localeController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.locale.LocaleController" parent="abstractController"/>

    <bean id="resourceController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.resource.ResourceController" parent="abstractController"/>

    <bean id="languageController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.language.LanguageController" parent="abstractController"/>

    <bean id="phaseController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.flow.plan.phase.PhaseController" parent="abstractController"/>

    <bean id="planController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.flow.plan.PlanController" parent="abstractController"/>

    <bean id="workoutController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.flow.plan.phase.workout.WorkoutController" parent="abstractController"/>

    <bean id="exerciseController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.flow.plan.phase.workout.exercise.ExerciseController" parent="abstractController"/>

    <bean id="dictionaryController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.dictionary.DictionaryController" parent="abstractController"/>

    <bean id="descriptionController" class="pl.jakubpiecuch.trainingmanager.web.controllers.api.description.DescriptionController" parent="abstractController"/>

    <bean id="version1Service" class="pl.jakubpiecuch.trainingmanager.service.api.v1.Version1Service">
        <property name="userServices">
            <map>
                <entry key="SOCIAL" value-ref="socialUserService"/>
                <entry key="LOCAL" value-ref="localUserService"/>
            </map>
        </property>
        <property name="authenticationService" ref="authenticationService"/>
        <property name="resourceServices">
            <map>
                <entry key="image" value-ref="imageResource"/>
            </map>
        </property>
        <property name="flowManagers">
            <map>
                <entry key="PHASE" value-ref="phaseManager"/>
                <entry key="PLAN" value-ref="planManager"/>
                <entry key="WORKOUT" value-ref="workoutManager"/>
                <entry key="EXERCISE" value-ref="exerciseManager"/>
            </map>
        </property>
        <property name="dictionary" ref="constantsDictionary"/>
        <property name="repository" ref="descriptionRepository"/>
    </bean>

</beans>
