<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="exerciseConverter" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.phase.workout.exercise.ExerciseConverter"/>

    <bean id="exerciseManager" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.phase.workout.exercise.ExerciseManager">
        <property name="converter" ref="exerciseConverter"/>
        <property name="dao" ref="exerciseDao"/>
    </bean>

    <bean id="workoutConverter" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.phase.workout.WorkoutConverter">
        <property name="manager" ref="exerciseManager"/>
    </bean>

    <bean id="workoutManager" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.phase.workout.WorkoutManager">
        <property name="converter" ref="workoutConverter"/>
        <property name="dao" ref="workoutDao"/>
    </bean>

    <bean id="phaseConverter" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.phase.PhaseConverter">
        <property name="manager" ref="workoutManager"/>
    </bean>

    <bean id="phaseManager" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.phase.PhaseManager">
        <property name="converter" ref="phaseConverter"/>
        <property name="dao" ref="phaseDao"/>
    </bean>

    <bean id="planConverter" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.PlanConverter">
        <property name="authenticationService" ref="authenticationService"/>
        <property name="manager" ref="phaseManager"/>
        <property name="planManager" ref="planManager"/>
    </bean>

    <bean id="planManager" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.PlanManager">
        <property name="converter" ref="planConverter"/>
        <property name="dao" ref="planDao"/>
    </bean>

</beans>
