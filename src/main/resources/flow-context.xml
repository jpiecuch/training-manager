<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="phaseConverter" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.phase.PhaseConverter"/>

    <bean id="phaseManager" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.phase.PhaseManager">
        <property name="converter" ref="phaseConverter"/>
        <property name="dao" ref="phaseDao"/>
    </bean>

    <bean id="planConverter" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.PlanConverter"/>

    <bean id="planeManager" class="pl.jakubpiecuch.trainingmanager.service.flow.plan.PlanManager">
        <property name="converter" ref="planConverter"/>
        <property name="dao" ref="planDao"/>
    </bean>

</beans>
