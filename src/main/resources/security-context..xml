<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <global-method-security pre-post-annotations="enabled"/>

    <http use-expressions="true" auto-config="true" entry-point-ref="authenticationEntryPoint">
        <access-denied-handler ref="accessDeniedHandler" />
        <intercept-url pattern="/" access="permitAll" />
        <intercept-url pattern="/resources/**" access="permitAll" />
        <intercept-url pattern="/api/v1/resource*" access="permitAll" />
        <intercept-url pattern="/api/v1/locale*" access="permitAll" />
        <intercept-url pattern="/api/v1/signin" access="permitAll" />
        <intercept-url pattern="/api/v1/signon" access="permitAll" />
    </http>

    <beans:bean id="authenticationEntryPoint" class="pl.jakubpiecuch.trainingmanager.web.authentication.AuthenticationEntryPoint"></beans:bean>

    <beans:bean id="accessDeniedHandler" class="pl.jakubpiecuch.trainingmanager.web.handlers.access.AccessDeniedHandler"></beans:bean>

    <beans:bean id="authenticationProvider" class="pl.jakubpiecuch.trainingmanager.web.authentication.LocalAuthenticationProvider">
        <beans:property name="accountDao" ref="usersDao"/>
        <beans:property name="shaPasswordEncoder" ref="shaPasswordEncoder"/>
    </beans:bean>

    <beans:bean abstract="true" id="abstractUserService" class="pl.jakubpiecuch.trainingmanager.service.user.AbstractUserService">
        <beans:property name="emailService" ref="emailService"/>
        <beans:property name="accountDao" ref="usersDao"/>
    </beans:bean>
    
    <beans:bean id="localUserService" class="pl.jakubpiecuch.trainingmanager.service.user.local.LocalUserServiceImpl" parent="abstractUserService">
        <beans:property name="passwordEncoder" ref="shaPasswordEncoder"/>
        <beans:property name="cryptService" ref="cryptService"/>
        <beans:property name="validator" ref="registrationValidator"/>
    </beans:bean>
    
    <beans:bean id="shaPasswordEncoder" class="pl.jakubpiecuch.trainingmanager.service.encoder.password.sha.SHAPasswordEncoder"><beans:property name="strength" value="256"/></beans:bean>

    <authentication-manager><authentication-provider ref="authenticationProvider"></authentication-provider></authentication-manager>
</beans:beans>