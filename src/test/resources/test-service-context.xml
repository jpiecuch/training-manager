<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:mvc="http://www.springframework.org/schema/mvc"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <mvc:annotation-driven />
    <context:annotation-config />
    <util:properties id="propertyConfigurerEnv" location="classpath:configuration/dev.properties"/>
    <util:properties id="propertyConfigurerCommon" location="classpath:configuration/common.properties"/>
    <context:property-placeholder location="classpath:configuration/dev.properties,classpath:configuration/common.properties" />
    <bean id="webRequest" class="pl.jakubpiecuch.trainingmanager.service.stub.WebRequestStub"/>

    <import resource="service-context.xml"/>
    <import resource="test-datasource-context.xml"/>

</beans>